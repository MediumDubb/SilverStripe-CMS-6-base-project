{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.3",
        "silverstripe/recipe-plugin": "~2.1.0@stable",
        "silverstripe/vendor-plugin": "~3.0.0@stable",
        "silverstripe/recipe-cms": "~6.1.0@stable",
        "silverstripe/login-forms": "~6.1.0@stable",
        "silverstripe/htmleditor-tinymce": "~1.0.2@stable",
        "twbs/bootstrap": "5.3.6",
        "fortawesome/font-awesome": "6.7.2",
        "components/jquery": "3.6",
        "dnadesign/silverstripe-elemental": "^6.0",
        "innis-maggiore/silverstripe-social-meta-tags": "^6.0",
        "innis-maggiore/silverstripe-smtp-tester": "^6.0",
        "innis-maggiore/silverstripe-content-extensions": "^6.0",
        "undefinedoffset/sortablegridfield": "^3.0",
        "wilr/silverstripe-googlesitemaps": "^4.0",
        "silverstripe/spamprotection": "^5.0",
        "undefinedoffset/silverstripe-nocaptcha": "^3.0",
        "silverstripe/userforms": "^7.0",
        "dnadesign/silverstripe-elemental-userforms": "^5.0",
        "bummzack/sortablefile": "^3.0",
        "unclecheese/display-logic": "^4.0",
        "silvershop/silverstripe-hasonefield": "dev-main",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3"
    },
    "extra": {
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "scripts": {
        "expose-theme-vendor": [
            "mkdir -p themes/<replace-theme>/js/vendor",
            "mkdir -p themes/<replace-theme>/css/dist",

            "cp vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js themes/<replace-theme>/js/vendor",
            "cp vendor/twbs/bootstrap/dist/css/bootstrap.min.css themes/<replace-theme>/css/dist",
            "cp vendor/fortawesome/font-awesome/js-packages/@fortawesome/fontawesome-free/css/all.min.css themes/<replace-theme>/css/dist/fontawesome.min.css",
            "cp vendor/fortawesome/font-awesome/js-packages/@fortawesome/fontawesome-free/js/all.min.js themes/<replace-theme>/js/vendor/fontawesome.min.js",
            "cp vendor/components/jquery/jquery.min.js themes/<replace-theme>/js/vendor"
        ]
    },
    "autoload": {
        "psr-4": {
            "<replace-org>\\<replace-psr-theme>\\": "app/src/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
